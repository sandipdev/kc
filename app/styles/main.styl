@import 'jeet/index'

*, ::before, ::after
  box-sizing border-box

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

html, body
  color #616161
  background hsl(100%, 80%, 70%)
  center(960px)
  font-family 'Roboto Slab', serif

html, body
  animation-duration 20s
  animation-name camouflage
  animation-iteration-count infinite

@keyframes camouflage
  from
    background-color hsl(50%, 80%, 70%)
  50%
    background-color #9ef075
  to
    background-color hsl(50%, 80%, 70%)

@keyframes camouflage-color
  from
    color #9ef075
  50%
    color hsl(50%, 80%, 70%)
  to
    color #9ef075

form
  margin 1.5em

h1
  text-align center
  animation-duration 20s
  animation-name camouflage-color
  animation-iteration-count infinite
  text-shadow 1px 1px 3px rgba(150, 150, 150, .9)
  font-size 3em
  +below(767px)
    font-size 2em

textarea
  border 1px solid #aeaeae
  border-radius 3px
  display block
  height 8em
  outline none
  padding .75em 1em
  resize none
  width 100%

input[type=submit]
  -webkit-appearance none
  -moz-appearance none
  appearance none
  border 1px solid #ccc
  box-shadow 1px 1px 3px rgba(150,150,150,.8)
  background rgba(255, 255, 255, .8)
  font-size 22px
  padding .5em 1em
  margin 1em 0 0 0
  background-color #9ef075
  color #fff
  outline none
  &:disabled
    background #ccc
  &:enabled:active
    position relative
    left 2px
    right 2px
    box-shadow none
  // &.ng-dirty.ng-invalid
  //   box-shadow 0 0 10px red

.content
  background #fff
  padding 0 5em
  border-right solid 1px #ccc
  border-left solid 1px #ccc
  cf()
  background rgba(255,255,255,0.7)
  +below(767px)
    padding 0
    margin 0

.post
  border solid 1px #ccc
  border-radius 3px
  box-shadow 3px 3px 3px 0px rgba(150, 150, 150, .2), -3px 3px 3px 0px rgba(150, 150, 150, .2)
  line-height 1.3
  font-size 20px
  padding 1.5em 3.15em
  margin 2.25em 1em
  background rgba(255,255,255,0.8)
  position relative
  +below(767px)
    padding 1em 1.25em
    margin 1em auto
    width 95%

.time-ago
  margin-top 2em
  margin-bottom -.2em
  font-size 15px
  color #aeaeae

