@import 'jeet/index'

@import '_colors'

*, ::before, ::after
  box-sizing border-box

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

html, body
  color #333
  background rgba(0, 0, 0, 0)
  font-family 'Arimo', Arial, Helvetica, sans-serif

.page-wrap
  center(960px)

.faux-bg
  background $primary-clr
  animation: camouflage-bg 30s linear 0s infinite

@keyframes camouflage-bg
  from
    background-color $primary-clr-lt
  47%
    background-color $primary-clr-lt
  50%
    background-color $secondary-clr-lt
  97%
    background-color $secondary-clr-lt
  to
    background-color $primary-clr-lt
@keyframes camouflage-color
  from
    color $secondary-clr
  47%
    color $secondary-clr
  50%
    color $primary-clr
  97%
    color $primary-clr
  to
    color $secondary-clr

form
  margin 0 1.5em
  padding-bottom 2em

h1
  text-align center
  animation: camouflage-color 30s linear 0s infinite
  text-shadow 1px 1px 3px rgba(150, 150, 150, .9)
  font-size 3em
  +below(767px)
    font-size 2em

h2
  font-size 2em

a
  text-decoration none
  color #888
  font-size 18px
  &.active
    color $primary-clr
    font-weight 700

.section-title
  text-align center
  margin 0
  margin-top -.8em
  background #fff

textarea
  border 1px solid #aeaeae
  border-radius 3px
  display block
  height 8em
  outline none
  padding .75em 1em
  resize none
  width 100%

input[type=submit]
  -webkit-appearance none
  -moz-appearance none
  appearance none
  border 1px solid #ccc
  box-shadow 1px 2px 1px rgba(150,150,150,.6), -1px 2px 1px rgba(150,150,150,.6)
  background rgba(255, 255, 255, .8)
  font-size 18px
  padding .5em 1em
  margin 1em 0 0 0
  border-radius 3px
  background-color $primary-clr
  color #fff
  outline none
  &:disabled
    background #ccc
  &:enabled:active
    position relative
    top 2px
    box-shadow 1px 0px 1px rgba(150,150,150,.4), -1px 0px 1px rgba(150,150,150,.4)
  // &.ng-dirty.ng-invalid
  //   box-shadow 0 0 10px red

.content
  background #fff
  padding 0 5em
  border-right solid 1px #ccc
  border-left solid 1px #ccc
  cf()
  +below(767px)
    padding 0
    margin 0

.posts
  margin 1em 0
  border solid 1px #ccc
  border-top none
  border-bottom non
  center(80%)

.post
  border-top solid 1px #ccc
  line-height 1.5
  font-size 16px
  padding 2em
  background rgba(255,255,255,0.8)

  +below(767px)
    padding 1em 1.25em
    margin 1em auto
    width 95%

.time-ago
  margin-top 2em
  margin-bottom -.2em
  font-size 12px
  color #9e9e9e

