@import 'jeet/index'

@import '_colors'

*, ::before, ::after
  box-sizing border-box

.browsehappy
  margin 0.2em 0
  background #ccc
  color #000
  padding 0.2em 0

html, body
  color #333
  background rgba(0, 0, 0, 0)
  font-family 'Arimo', Arial, Helvetica, sans-serif

.page-wrap
  center(960px)

.faux-bg
  background $primary-clr
  animation: camouflage-bg 30s linear 0s infinite

@keyframes camouflage-bg
  from
    background-color $primary-clr-lt
  47%
    background-color $primary-clr-lt
  50%
    background-color $secondary-clr-lt
  97%
    background-color $secondary-clr-lt
  to
    background-color $primary-clr-lt
@keyframes camouflage-color
  from
    color $secondary-clr
  47%
    color $secondary-clr
  50%
    color $primary-clr
  97%
    color $primary-clr
  to
    color $secondary-clr

form
  margin 0 1.5em
  padding-bottom 2em

h1
  text-align center
  animation: camouflage-color 30s linear 0s infinite
  text-shadow 1px 1px 3px rgba(150, 150, 150, .9)
  font-size 3em

  +below(767px)
    font-size 2em

h2
  font-size 2em

a
  text-decoration none
  color #888
  font-size 18px

  &.active
    color $primary-clr
    font-weight 700

.section-title
  text-align center
  margin 0
  margin-top -.8em

textarea
  border 1px solid #aeaeae
  border-radius 3px
  font-size 17px
  display block
  height 8em
  outline none
  padding .75em 1em
  resize none
  width 100%

input[type=submit]
  -webkit-appearance none
  -moz-appearance none
  -ms-appearance none
  appearance none
  border solid 3px darken($primary-clr, 20)
  font-size 20px
  font-weight 700
  padding .75em 1em
  margin 1em 0 0 0
  border-radius 3px
  background-color $primary-clr
  color #fff
  outline none
  transition all .5 s ease
  center()
  width 50%

  &:disabled
    background #aaa
    border solid 3px darken(#aaa, 20)
  &:enabled:active
    position relative
    top 2px


.content
  background rgba(#fff, .75)
  padding 0 5em
  border-right solid 1px #ccc
  border-left solid 1px #ccc
  cf()

  +below(767px)
    padding 0
    margin 0

.suggestions
  margin 1em 0
  center(80%)

.suggestion
  background #fff
  border solid 1px #aeaeae
  border-radius 5px
  line-height 1.5
  font-size 17px
  padding 2em 0
  cf()

  & + &, &:first-child, &:last-child
    margin 1.75em 0
  &:first-child
    margin-top 0
  &:last-child
    margin-bottom 0

  +below(767px)
    padding 1em 1.25em
    margin 1em auto
    width 95%

.suggestion-main
  col(.85)
  padding-left 2.25em

.votes
  col(.15)
  text-align center

  .score
    font-size 1.4em
    font-weight bold

  i
    font-size 2em
    display block

    &:hover
      color $primary-clr

.time-ago
  margin-top 4em
  margin-bottom -.1em
  font-size 12px
  color #9e9e9e
